% A master command on '\emph'
\newcommand{\myemph}[1]{\emph{#1}}
% To write a name
% The optional argument is for prefix on names (like 'van der' in 'van der Walls')
\newcommand{\myname}[2][]{%
	\if@myfrancais
		\textsc{%
			\ifstrempty{#1}%
				{%
				}{%
					\MakeLowercase{#1}%
				}%
			\makefirstuc{\MakeLowercase{#2}}%
		}%
	\else
		\ifstrempty{#1}%
			{%
			}{%
				\MakeLowercase{#1}%
			}%
		\MakeUppercase{#2}%
	\fi
}
% To print numbers (see 'numprint' package)
\newcommand{\mynum}[2][]{\ifstrempty{#1}{\numprint{#2}}{\numprint[#1]{#2}}}

%% Symboles
% © : Copyright
\newcommand{\mycopyright}{\copyright}
% ® : Registered
\newcommand{\myregistered}{\textregistered\xspace}
% ™ : Trade mark
\newcommand{\mytrademark}{\texttrademark\xspace}

%% Latin citations
% a fortiori : après quelque chose
\newcommand{\myafortiori}{\textit{a fortiori}\xspace}
% a priori : avant quelque chose
\newcommand{\myapriori}{\textit{a priori}\xspace}
% confer : se référer à
\newcommand{\mycf}{\textit{c.f.}\xspace}
% exempli gratia : par l'exemple (littéralement par la grâce de l'exemple)
\newcommand{\myeg}{\textit{e.g.}\xspace}
% et alii : et les autres
\newcommand{\myetal}{\textit{et al.}\xspace}
% et cetera desunt : et les autres choses manquent
\newcommand{\myetc}{\textit{etc.}\xspace}
% id est : c'est-à-dire
