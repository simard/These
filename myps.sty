% Define a master command for 'pspicture'
% This command introduce a border frame for draft compilation
\def\myps(#1,#2)(#3,#4){%
	\pspicture(#1,#2)(#3,#4)%
	\ifdraft%
	{%
		\psframe(#1,#2)(#3,#4)% To delimit the border of figure
	}{%
	}%
}
\def\endmyps{\endpspicture}

