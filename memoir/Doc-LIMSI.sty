% 1: Numero, 2: date
\newcommand{\Reference}[2]{%
\vspace*{9cm}
\hfill
\begin{minipage}{105mm}
\textbf{NOTES~et~DOCUMENTS~ LIMSI~ 
$\mbox{\textbf{N}}^\textrm{o}$~: #1 \\
\medskip
#2}
\end{minipage}
}

% 1: titre, 2: auteurs
\newcommand{\TitreEtAuteurs}[2]{%
% La macro permettant de définir l'encadré du titre
\vspace*{50mm}
\begin{center}
  {\Large \textbf{#1}}

  \vspace*{17mm}
  {\Large  #2}
\end{center}
\newpage
}

% 1: numero, 2: date, 3: titre, 4: auteurs
\newcommand{\RappelReference}[4]{%
\textbf{Notes et Documents LIMSI $\mbox{\textbf{N}}^\textrm{o}$~: #1}
\hspace*{3.truecm} 

\textbf{#2}
\medskip

\textbf{Auteurs (Authors) :}  #4
\medskip

\textbf{Titre :}
\begin{minipage}[t]{95mm}
  #3
\end{minipage}
\medskip
}

% La macro permettant de définir l'encadré éventuel du résumé
\newcommand{\Title}[1]{%
\textbf{Title:} 
\begin{minipage}[t]{95mm} 
  #1
\end{minipage}
\medskip
}

\newcommand{\Resume}[1]{%
	\textbf{Nombre de pages (Number of pages) :} \global\advance \count1 by 1\relax\the\count1

\vspace*{100mm}
{\footnotesize
\textbf{R\'esum\'e :} \textsl{#1}
}}

\newcommand{\MotsClefs}[1]{%
{\footnotesize
  \textbf{Mots-cl\'es :}  #1
  \medskip
}}

\newcommand{\Abstract}[1]{%
{\footnotesize
\textbf{Abstract :} \textsl{#1}
}}

\newcommand{\KeyWords}[1]{%
{\footnotesize
\textbf{Keywords:} #1
}

\newpage
}

