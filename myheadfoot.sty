\NeedsTeXFormat{LaTeX2e}[1999/01/01]
\ProvidesPackage{myheadfoot}[2011/04/29]

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%% Declare package options %%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% In case of unknown options
\DeclareOption*{%
	\PackageWarning{myheadfoot}{Unknown option `\CurrentOption'}%
}

\ProcessOptions

%% Options to pass to packages

%% Packages to call
% To know if the compilation is 'draft'
\RequirePackage{ifdraft}
% The 'fancyhdr' can modify headers and footers
\RequirePackage{fancyhdr}

%%%%%%%%%%%%%%%%%%%%%%%
%% New configuration %%
%%%%%%%%%%%%%%%%%%%%%%%
% Redefine the head height for header
\setlength{\headheight}{15pt}
% Define the current page style
\pagestyle{fancy}
% Reset all headers
\fancyhead{}
% Put chapter on left of even pages
\fancyhead[LE]{\sffamily \nouppercase{\leftmark}}
% Put section on right of odd pages
\fancyhead[RO]{\sffamily \nouppercase{\rightmark}}
% Reset all footers
\fancyfoot{}
% Put the page number on center of each page
\fancyfoot[C]{\thepage}
% Do not compile headers and footers in draft mode
\ifdraft%
	{%
		\pagestyle{empty}
		\let\ps@plain\ps@empty
	}{%
	}

